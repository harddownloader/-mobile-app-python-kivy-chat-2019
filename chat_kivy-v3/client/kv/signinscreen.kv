<SignInScreen>:
    GridLayout:
        rows: 2
        MDToolbar:
            id: toolbar
            title: "Sign in"
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            elevation: 10
            right_action_items: [['dots-vertical', lambda x: root.show_bottom_sheet()]]

        GridLayout:
            rows: 3
            orientation: 'vertical'
            padding: [10,50,10,50]
            #spacing: 50
            BoxLayout:

                Image:
                    halign: "center"
                    source: "img/tinkle_logo.png"
            GridLayout:
                rows:3
                cols:3
                orientation: "vertical"
                MDLabel:
                MDTextField:
                    hint_text: "Username"
                    max_text_length: 12
                    id: alias
                    multiline: False
                    write_tab: False
                Widget:
                Widget:
                Widget:
                Widget:

                Widget:
                MDRaisedButton:
                    text:"Proceed"
                    on_release:
                        prg_spin.start_spinning()
                        Clock.schedule_once(lambda dt: root._signin(), 1.2)
                        
                Widget:

            GridLayout:
                rows:4
                cols:3
                Widget:
                Widget:
                Widget:
                Widget:

                BoxLayout:
                    orientation: 'vertical'

                    BoxLayout:

                        ProgressSpinner:
                            auto_start: False
                            id:prg_spin
                            speed: 2
                            color: get_color_from_hex("#4285f4")
                            stroke_width: 1.6
                MDRaisedButton:
                    text:"Register"
                    on_release:
                        root.manager.current = "registration_screen"

                MDLabel:
                    text: ""