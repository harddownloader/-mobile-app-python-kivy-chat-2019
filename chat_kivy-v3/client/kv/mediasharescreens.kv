<ImagePreviewShare>:
    GridLayout:
        cols:1
        padding: dp(4), dp(4)
        spacing: dp(4)
        GridLayout:
            rows: 1
            cols: 3
            SmartTileWithLabel:
                id: image_preview
                text: "[size=15]Preview of image to share[/size]"
                on_release:
                    root.preview_img(image_preview.source)

        MDRoundFlatIconButton:
            text: "Change"
            icon: "folder"
            pos_hint: {'center_x': .5, 'center_y': .6}
            on_release:
                root.file_manager_open()
        GridLayout:
            size_hint_y: None
            spacing: dp(10)
            rows: 1
            Widget:
            MDRaisedButton:
                text: "Cancel"
                on_release:
                    root.on_back_pressed()
            MDRaisedButton:
                text: "Send"
                on_release: root.prepare_send_it(image_preview.source)
            Widget: